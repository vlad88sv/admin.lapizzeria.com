{% extends '::base.html.twig' %}

{% block page_sub_header %}Ver sucursal{% endblock %}

{% block body -%}

    <table class="record_properties table table-condensed table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ entity.telefono }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ entity.direccion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ entity.activo ? 'si' : 'no' }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="btn btn-sm btn-info" href="{{ path('sucursales') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a class="btn btn-sm btn-primary" href="{{ path('sucursales_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
