{% extends '::base.html.twig' %}

{% block page_sub_header %}Compras: vista de unidad {{ entity.nombreSingular }}{% endblock %}

{% block body -%}
    <table class="record_properties table table-responsive">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Abreviatura</th>
                <td>{{ entity.abreviatura }}</td>
            </tr>
            <tr>
                <th>Nombre singular</th>
                <td>{{ entity.nombreSingular }}</td>
            </tr>
            <tr>
                <th>Nombre plural</th>
                <td>{{ entity.nombrePlural }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ entity.activo ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('compras_productos_unidades') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('compras_productos_unidades_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
